<div class="head">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" 
            content="width=device-width, 
                    initial-scale=1.0" />
        <h1>
        <%= image_tag "sparc.png", height: 300%>
        </h1>
        <h1 style="padding-bottom: 0px;"> Welcome to SPARC</h1>
        <h3 style="text-align: center; padding-top: 0px;">(Systemized Policy and Regulatory Controls)</h3>
        <div class="in-line"> 
            <% if user_signed_in? %>
                <p>Welcome, <%= current_user.email %>!</p>
                <%= link_to "New Control", new_catalog_path %>&nbsp;&nbsp;&nbsp;
                <%= button_to "Log Out", destroy_session_path, method: :delete%>
            <% else %>
                <%= link_to "Login", new_user_session_path%>&nbsp;&nbsp;&nbsp;
            <% end %>
            <%= link_to "Controls", catalogs_path%> &nbsp;&nbsp;&nbsp;
        </div>
    </head>
</div>