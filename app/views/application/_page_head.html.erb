<div class="head">
  <h1>
    <%= image_tag "sparc.png", height: "150" %>
  </h1>
  <h1 style="padding-bottom: 0px;">SPARC</h1>
  <div class="in-line">
    <% if user_signed_in? %>
      <p>Welcome, <%= current_user.email %>!</p>
      <%= link_to "New Control", new_catalog_path %>&nbsp;&nbsp;&nbsp;
      <%= button_to "Log Out", destroy_user_session_path, method: :delete %>
    <% else %>
      <p>User not signed in</p>&nbsp;&nbsp;&nbsp;
      <%= link_to "Login", new_user_session_path %>&nbsp;&nbsp;&nbsp;
    <% end %>
    <%= link_to "Controls", catalogs_path %> &nbsp;&nbsp;&nbsp;
    <%= link_to "Home", root_path %>
  </div>
</div>